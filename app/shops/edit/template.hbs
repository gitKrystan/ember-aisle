<h3>Edit {{model.shop.brand.name}}: {{model.shop.name}}</h3>
{{new-shop
  brands=model.brands
  shop=model.shop
  allAisles=model.aisles
  allCategories=model.categories
  updateShop="updateShop"
  createTempCategory='createTempCategory'
  createTempAisle='createTempAisle'
}}
{{#if model.shop.layout}}
  {{edit-layout updateLayout="updateLayout" shop=model.shop layout=model.layout}}
{{else}}
  {{new-layout exportLayout="exportLayout" shop=model.shop aisles=model.aisles}}
{{/if}}
