<form>
  <h3>New Shop</h3>
  <div class="form-group">
    <label for="shopBrand">Brand</label>
    {{#power-select
      selected=currentBrand
      options=brands
      onchange=(action (mut currentBrand))
      as |brand|
    }}
      {{brand.name}}
    {{/power-select}}
  </div>
  <div class="form-group">
    <label for="shopName">Name</label>
    {{input value=shopName class="form-control"}}
  </div>
  <div class="form-group">
    <label for="shopAddress">Address</label>
    {{input value=shopAddress class="form-control"}}
  </div>

  {{new-aisle
    createTempCategory='createTempCategory'
    createTempAisle='createTempAisle'
  }}

  <div class="form-group">
    <button {{action "createShop"}} class="btn btn-primary">Create Shop</button>
  </div>
</form>
