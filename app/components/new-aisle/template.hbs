<h3>Add Aisles</h3>
<div class="row">
  <div class="col-sm-6">
    <div class="form-group">
      <label for="aisleNumber">Aisle Number</label>
      {{input value=aisleNumber class="form-control"}}
    </div>

    <div class="form-group">
      <label for="aisleCategories">Categories</label>
      {{#power-select-multiple
        options=allCategories
        selected=categories
        placeholder="Select Categories"
        onchange=(action (mut categories))
        as |category|
      }}
        {{category}}
      {{/power-select-multiple}}
    </div>
  </div>

  <div class="col-sm-6">
    <ul>
      {{#each aisles as |aisle|}}
        <li>{{aisle.name}}: {{name-list aisle.categories}}</li>
      {{/each}}
    </ul>
  </div>
</div>
